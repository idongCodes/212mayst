            </form>
          </div>
        </section>
      </FadeInSection>

      {/* WHAT'S NEW SECTION - Wrapped */}
      <FadeInSection>
        <section style={{ maxWidth: '900px', margin: '0 auto', padding: '2rem' }}>
          <div style={{ backgroundColor: 'white', padding: '2rem', borderRadius: '20px', boxShadow: '0 4px 6px rgba(0,0,0,0.1)' }}>
